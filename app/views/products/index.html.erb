
<div style="margin-top: 5px; margin-right: -50px;">
    <%= link_to "View Cart Items", cart_items_path, class: "btn btn-primary mb-3", style: "float:right;" %>
</div>

<div class="container mt-4">
  <h1 class="text-center mb-4">Products</h1>

  <div id="products" class="row">
    <% @products.each do |product| %>
      <div class="col-md-4 mb-4">
        <%= render product %>
        <p class="text-center mt-2">
          <%= link_to "Show this product", product, class: "btn btn-primary" %>
        </p> 
      </div>
    <% end %>
  </div>
  <div class="text-center mt-4">
       <%= will_paginate @products %>
  </div>
    
  <div class="text-center mt-4">
    <% if  user_signed_in? && current_user.role == "admin" %>
    <%= link_to "New product", new_product_path, class: "btn btn-success" %>
    <% end %>
  </div>
  
</div>


